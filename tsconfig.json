{
  "compilerOptions": {
    "strict": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "target": "es5",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "importHelpers": true,
    "paths": {
      "draftlog": ["./src/types/draftlog.d.ts"]
    }
  },
  "typedocOptions": {
    "entryPoints": ["./src/bin/index.ts"],
    "out": "docs"
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
